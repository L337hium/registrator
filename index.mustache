<!DOCTYPE html>
<html>
  <head>
    <title>{{name}}> {{network.name}}</title>

    <!-- generic webapp shit-->
    <link href='//eins78.github.com/appstrakt/style.css' rel='stylesheet' type='text/css'>
    
  </head>
  <body>
    <style type="text/css">
    article, footer {
      min-width: 520px;
      max-width: 780px;
    }
    .table {
      font-size: 11pt;
    }
    .table td {
      font-family: 'Source Code Pro', sans-serif;
    }
    .table tr, .table td {
      font-weight: normal;
    }
    #network {
      width: 62%;
    }
    </style>
    
    <article>
      <header>
        <h1>{{name}}</h1>
      </header>

      {{#network}}
      {{#active}}
      <table id="network" class="table table-condensed table-bordered">
        <tr>
          <th>network</th>
          <th>range</th>
          <th>lease days</th>
        </tr>
        <tr>
          <td>
            <a href="{{url}}" title="{{name}} Website">
              <kbd>{{name}}</kbd> 
              <small class="muted">
                  <i class="icon-external-link"></i>
              </small>
            </a>
          </td>
          <td>
            <kbd>{{minimum}}..{{maximum}}</kbd> 
          </td>
          <td>
            <kbd>
              {{#lease_days}}{{lease_days}}{{/lease_days}}
              {{^lease_days}}unknown!{{/lease_days}}
            </kbd> 
          </td>
        </tr>
      </table>
      {{/active}}
      {{/network}}
            
      <table class="table table-hover">
        <tr>
          
          <th>&#x2116; <span class="muted">(<a href="/list/numbers">list</a>)</span></th>
          
          <th>MAC <span class="muted">(<a href="/list/macs">list</a>)</span></th>
          
          <th>created at</th>
          <th>last seen</th>
          
        </tr>
        
        {{#knoten}}
        {{#last_seen}} {{! only show nodes with last seen}}
        <tr>
          <td>
            <a href="/GET/knoten/{{number}}">{{number}}</a>
          </td>
          <td>
            <a href="/GET/knoten/{{number}}">{{mac}}</a>
          </td>
          <td>
            <a href="/GET/knoten/{{number}}">{{created_at}}</a>
          </td>   
          <td>
            <a href="/GET/knoten/{{number}}">{{last_seen}}</a>
          </td>   
        </tr>
        {{/last_seen}}
        {{/knoten}}
      </table>
      
    </article>
    
    <footer>
      <small class="muted">
        <kbd>{{name}}.js running on dev.</kbd>
      </small>
    </footer>
    
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js"></script>
    
  </body>
</html>
